<style>
  footer {
    position: relative;
    padding: 12rem 1rem 6rem;
    background-color: white;
    background-image: url("/barcode.webp");
    background-repeat: no-repeat;
    background-size: 200% 35%;
  }

  .footer-container {
    display: grid;
    gap: 4rem;
  }

  p {
    font-size: 2rem;
    font-weight: 400;
    font-family: var(--font-noto);
    color: var(--color-gray);
    margin-right: 2rem;
  }

  .email-me {
    margin-top: 2rem;
  }

  i {
    color: black;
  }

  nav {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  h3 {
    color: var(--color-gray);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05rem;
    min-height: 2.25rem;
  }

  a {
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
    color: black;
    text-decoration: none;
  }

  @media (width > 48em) {
    footer {
      padding: 16rem 2rem 10rem;
      background-size: 100% 40%;
    }
  }

  @media (width > 57em) {
    p {
      margin-right: 0;
    }

    .footer-container {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
